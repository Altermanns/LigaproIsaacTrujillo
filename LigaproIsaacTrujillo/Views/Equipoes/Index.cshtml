@model IEnumerable<LigaproIsaacTrujillo.Models.Equipo>

@{
    ViewData["Title"] = "Equipos";
}

<div class="container mt-5">
    <div class="row mb-4">
        <div class="col">
            <h2 class="text-center">Lista de Equipos</h2>
        </div>
        <div class="col text-end">
            <a class="btn btn-primary" asp-action="Create">
                <i class="bi bi-plus-circle"></i> Agregar Equipo
            </a>
        </div>
    </div>

    <table class="table table-striped table-hover table-bordered align-middle">
        <thead class="table-dark">
            <tr>
                <th>Nombre</th>
                <th>Ciudad</th>
                <th>Títulos</th>
                <th>Acepta Extranjeros</th>
                <th>Estadio</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                    <td>@Html.DisplayFor(modelItem => item.Ciudad)</td>
                    <td>@Html.DisplayFor(modelItem => item.Titulos)</td>
                    <td>
                        @if (item.AceptaExtranjeros)
                        {
                            <span class="badge bg-success">Sí</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">No</span>
                        }
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.Estadio.Ciudad)</td>
                    <td class="text-center">
                        <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.Id">
                            <i class="bi bi-pencil"></i> Editar
                        </a>
                        <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.Id">
                            <i class="bi bi-eye"></i> Ver
                        </a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">
                            <i class="bi bi-trash"></i> Eliminar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
